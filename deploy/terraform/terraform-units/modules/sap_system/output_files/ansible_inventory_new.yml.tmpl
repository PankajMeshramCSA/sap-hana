# SAPSID: ${sid}
${sid}_DB:
  hosts:
%{~ for idx,ips_dbnode in ips_dbnodes }
    ${dbnodes[idx].name}:
      ansible_host        : ${ips_dbnode}
      ansible_connection  : ${dbconnection} 
      connection_type     : ${dbconnectiontype} 
%{~ endfor }
  vars:
    node_tier             : ${platform}

